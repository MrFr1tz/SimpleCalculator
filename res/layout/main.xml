<?xml version="1.0" encoding="utf-8"?>
<!-- android:layout_weight="0.60" -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background">
    <LinearLayout 
        android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:paddingLeft="5dip"
        android:layout_width="225dp">
    	
    	<EditText
    	    	android:id="@+id/calculation_history"
          		android:layout_height="fill_parent"
          		android:layout_width="match_parent"
          		android:inputType="textMultiLine"
          		android:gravity="top|left"
          		android:textSize="14sp"
          		android:background="@drawable/calc_history"
          		android:state_enabled="false"
          		android:cursorVisible="false"
          		android:text="">
         </EditText>
    </LinearLayout>
    
    <LinearLayout 
        android:orientation="vertical"
    	android:layout_width="0dip"
    	android:layout_height="fill_parent"
    	android:layout_weight="0.40">
        <EditText
        	    android:id="@+id/input_field"
          		android:layout_width="250dip"
          		android:layout_height="70dip"
          		android:layout_gravity="right"
          		android:inputType="textMultiLine"
          		android:gravity="top|left"
          		android:textSize="14sp"
          		android:background="@drawable/input_line"
          		android:text="">
         </EditText>
		 
        <LinearLayout
          	android:orientation="horizontal"
    	  	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="right">
         <Button
         	    android:id="@+id/ce_button"
         	    android:layout_marginTop="5dip"
           		android:layout_width="150dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Clear_ButtonClick"
    			android:background="@drawable/ce_button_selector"
    			android:text=""/>
    	 <Button
         	    android:id="@+id/calculate_button"
         	    android:layout_marginTop="5dip"
           		android:layout_width="100dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Calculate_ButtonClick"
    			android:background="@drawable/ravno_button_selector"
    			android:text=""/>
    	</LinearLayout>
        
        <LinearLayout
          	android:orientation="horizontal"
    	  	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
        	android:gravity="right">
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Seven_ButtonClick"
    			android:background="@drawable/seven_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Eight_ButtonClick"
    			android:background="@drawable/eight_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Nine_ButtonClick"
    			android:background="@drawable/nine_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Kvadrat_ButtonClick"
    			android:background="@drawable/kvadrat_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_BackSpace_ButtonClick"
    			android:background="@drawable/back_button_selector"
    			android:text=""/>
        </LinearLayout>
        
         <LinearLayout
          	android:orientation="horizontal"
    	  	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="right">
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Four_ButtonClick"
    			android:background="@drawable/four_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Five_ButtonClick"
    			android:background="@drawable/five_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Six_ButtonClick"
    			android:background="@drawable/six_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Plus_ButtonClick"
    			android:background="@drawable/plus_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Minus_ButtonClick"
    			android:background="@drawable/minus_button_selector"
    			android:text=""/>
        </LinearLayout>

         <LinearLayout
             android:layout_width="fill_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
			 android:gravity="right">
             <Button
                 android:layout_width="50dip"
                 android:layout_height="50dip"
                 android:background="@drawable/one_button_selector"
                 android:onClick="SC_One_ButtonClick"
                 android:text=""/>

             <Button
                 android:layout_width="50dip"
                 android:layout_height="50dip"
                 android:onClick="SC_Two_ButtonClick"
                 android:background="@drawable/two_button_selector"
                 android:text="" />

             <Button
                 android:layout_width="50dip"
                 android:layout_height="50dip"
                 android:onClick="SC_Three_ButtonClick"
                 android:background="@drawable/three_button_selector"
                 android:text="" />

             <Button
                 android:layout_width="50dip"
                 android:layout_height="50dip"
                 android:onClick="SC_Multiply_ButtonClick"
                 android:background="@drawable/multiply_button_selector"
                 android:text="" />

             <Button
                 android:layout_width="50dip"
                 android:layout_height="50dip"
                 android:onClick="SC_Divide_ButtonClick"
                 android:background="@drawable/divide_button_selector"
                 android:text="" />
         </LinearLayout>
        
         <LinearLayout
          	android:orientation="horizontal"
    	  	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:gravity="right">
        	<Button
        	    android:layout_marginLeft="0dip"
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Zero_ButtonClick"
    			android:background="@drawable/zero_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Dot_ButtonClick"
    			android:background="@drawable/dot_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:onClick="SC_Percent_ButtonClick"
    			android:background="@drawable/percent_button_selector"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:background="@drawable/left_bracket_selector"
    			android:onClick="SC_LeftBracket_ButtonClick"
    			android:text=""/>
        	<Button
        		android:layout_width="50dip"
    			android:layout_height="50dip"
    			android:background="@drawable/right_bracket_selector"
    			android:onClick="SC_RightBracket_ButtonClick"
    			android:text=""/>
        </LinearLayout>    
    </LinearLayout>

</LinearLayout>